{{#if msgSuccess}}
  <h1 class="message-success" >{{msgSuccess}}</h1>
{{/if}}

<div class="container">
  
  {{!-- First card --}}
  <div class="card">
    <a href="/exams/list-exams">
      <div class="card__image-container">
        <img class="card__image" src="../../images/exam-img.png"
          alt="Imagem de um exame de ressonância magnética">
      </div>
      <svg class="card__svg" viewBox="0 0 800 500">
        <path
          d="M 0 100 Q 50 200 100 250 Q 250 400 350 300 C 400 250 550 150 650 300 Q 750 450 800 400 L 800 500 L 0 500"
          stroke="transparent" fill="#333" />
        <path class="card__line"
          d="M 0 100 Q 50 200 100 250 Q 250 400 350 300 C 400 250 550 150 650 300 Q 750 450 800 400" stroke="pink"
          stroke-width="3" fill="transparent" />
      </svg>
      <div class="card__content">
        <h2 class="card__title">Listar exames ativos e inativos <div class="card__title-arrow">&#x2771;&#x2771;</div></h2>
      </div>
    </a>
  </div>

  {{!-- Second card --}}
  <div class="card">
    <a href="/exams/new-exam">
      <div class="card__image-container">
        <img class="card__image" src="../../images/new-exam.jpg" alt="Imagem de um exame de ultrassom em uma grávida ">
      </div>
      <svg class="card__svg" viewBox="0 0 800 500">
        <path
          d="M 0 100 Q 50 200 100 250 Q 250 400 350 300 C 400 250 550 150 650 300 Q 750 450 800 400 L 800 500 L 0 500"
          stroke="transparent" fill="#333" />
        <path class="card__line"
          d="M 0 100 Q 50 200 100 250 Q 250 400 350 300 C 400 250 550 150 650 300 Q 750 450 800 400" stroke="pink"
          stroke-width="3" fill="transparent" />
      </svg>
      <div class="card__content">
        <h2 class="card__title">Cadastrar novo exame <div class="card__title-arrow">&#x2771;&#x2771;</div></h2>
      </div>
    </a>
  </div>
</div>