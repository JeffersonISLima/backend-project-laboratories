{{#if msgSuccess}}
  <h1 class="message-success">{{msgSuccess}}</h1>
{{/if}}

{{#if msgFailure}}
  <h1 class="message-failure">{{msgFailure}}</h1>
{{/if}}

<h1>Lista de laboratórios cadastrados</h1>

<h2>Laboratórios ativos</h2>
{{#each laboratories}}
  {{#if this.status}}
    <p><a href="/laboratories/details/{{this._id}}">{{this.name}}</a></p>    
  {{/if}}
  {{else}}
    <p>No laboratories yet!</p>
{{/each}}

<h2>Laboratórios inativos</h2>
{{#each laboratories}}
  {{#unless this.status}}
    <p><a href="/laboratories/details/{{this._id}}">{{this.name}}</a></p>
  {{/unless}}
  {{else}}
    <p>No laboratories yet!</p>
{{/each}}